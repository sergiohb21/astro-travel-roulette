---
import Layout from '../layouts/Layout.astro';
import Heroe from '../components/Heroe.astro';
import HeroeDark from '../components/HeroeDark.astro';
import Features from '../components/Features.astro';
import HeroeAccesibility from '../components/HeroeAccesibility.astro';
---

<Layout title="Welcome to Travel Roulette.">
  <Heroe 
    img="assets/img/collage.webp"
    alt="Collage con imágenes de viajes de nuestros usuarios"
    title="Descubre el Mundo con Travel Roulette"
    text="¡Embárcate en una aventura única y sin límites! Deja que la emoción te guíe mientras exploras destinos sorprendentes y creas recuerdos inolvidables."
    btnPrimaryText="Comienza tú Aventura"
    btnPrimaryLink="/explora"
  />

  <HeroeDark 
    title="Planifica tu Próxima Aventura"
    text="Con Travel Roullete, no hay límites para tus viajes. Personaliza tu experiencia según tus preferencias y déjate llevar por la emoción de lo desconocido."
    btnPrimaryText="Contacto"
    btnPrimaryLink="/contact"
  />

  <Features 
  content="Sumérgete en una experiencia de viaje incomparable con Travel Roullete. Explora destinos emocionantes, personaliza cada detalle y déjate llevar por la emoción de lo desconocido."
  subcontent="Descubre cómo podemos convertir tu próxima aventura en una experiencia inolvidable."
  btnText="Sobre nosotros"
  btnLink="/about"
  features={[
    {icon: "bi bi-globe", title: "Personalización Total", content: "Adapta cada aspecto de tu viaje a tus gustos y necesidades. Desde el destino hasta el alojamiento, tienes el control completo."},
    {icon: "bi bi-calendar-check", title: "Planificación sin Estrés", content: "Olvida las preocupaciones de la planificación. Con Travell Roullet, todo está organizado para ti, desde la reserva hasta las actividades."},
    {icon: "bi bi-heart", title: "Emoción Garantizada", content: "Experimenta la emoción de explorar destinos desconocidos. Nuestra aplicación te lleva a lugares fuera de lo común, creando momentos inolvidables."},
    {icon: "bi bi-compass", title: "Libertad para Explorar", content: "Descubre nuevos horizontes sin restricciones. Con Travell Roullet, tu aventura no tiene límites ni fronteras."}
  ]}
/>

  <HeroeAccesibility 
    title= "Compromiso con la calidad, usabilidad y accesibilidad"
    description = "Trabajamos duro para garantizar que nuestro sitio web sea accesible para todas las personas, incluidas aquellas con discapacidades, y que brinde una experiencia de usuario excepcional a todos nuestros visitantes. Para más información sobre nuestras prácticas y políticas en estos aspectos, visita nuestra página de acesibilidad."
    btnPrimaryText='Políticas de Calidad y Accesibilidad'
    btnPrimaryLink='/accesibility'
  />
</Layout>
