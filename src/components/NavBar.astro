---
  const navLinks = [
  { text: 'Inicio', href: '/' },
  { text: 'Descubre', href: '#' },
  { text: 'Sobre nosotros', href: '/about' },
];

//Cambiar lógica
const isLoggedIn = false; 
const userName = "Sergio"; 
---
<div class="container">
    <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
      <div class="col-md-3 mb-2 mb-md-0">
        <a href="/" class="d-inline-flex link-body-emphasis text-decoration-none">
            <svg width="40" height="32" xmlns="http://www.w3.org/2000/svg">
                <!-- Aquí coloca el código de tu propio icono SVG -->
                <path fill="#000000" d="M10 0h4v32h-4zM24 0h4v32h-4"/>
              </svg>
              <span>Travel Roulette</span>
        </a>
      </div>

      <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
        {navLinks.map((link) => (
          link.href == '/' 
            ? <li><a href={link.href} class="nav-link px-2 link-secondary">{link.text}</a></li>
            : <li><a href={link.href} class="nav-link px-2">{link.text}</a></li>
        ))}
      </ul>

      <div class="col-md-4 text-end">
        {isLoggedIn ? (
          <div class="d-flex align-items-center">
            <i class="bi bi-person-fill me-2"></i>
            <p class="me-2">Hola, {userName}</p>
          </div>
        ) : (
          <div>
            <a href="/login" class="btn btn-outline-primary me-2">Inicia Sesión</a>
            <button type="button" class="btn btn-primary">Regístrate</button>
          </div>
        )}
      </div>
    </header>
  </div>