---
  const navData = [
  { text: 'Inicio', href: '/' },
  { text: 'Explora', href: '/explora' },
  { text: 'Sobre nosotros', href: '/about' },
  { text: 'Contacto', href: '/contact' },
];


//Cambiar lógica
const isLoggedIn = false;
const userName = "Sergio"; 
---
<nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">
      <img src="assets/img/logo.png" alt="Logo Travel Roulette" width="40" height="32">
      <span>Travel Roulette</span>
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
      <ul class="navbar-nav">
        {navData.map((link) => (
          <li class="nav-item">
            <a href={link.href} class="nav-link">{link.text}</a>
          </li>
        ))}
      </ul>
    </div>
    <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
      <ul class="navbar-nav">
        {isLoggedIn ? (
          <li class="nav-item">
            <p class="nav-link mb-0">Hola, {userName}</p>
          </li>
        ) : (
          <li class="nav-item">
            <a href="/login" class="nav-link">Inicia Sesión</a>
          </li>
          <li class="nav-item">
            <a href="/register" class="nav-link">Regístrate</a>
          </li>
        )}
      </ul>
    </div>
  </div>
</nav>

<script>
  // Obtener la URL actual
const currentUrl = window.location.pathname;

// Obtener todos los elementos de enlace de la barra de navegación
const navLinks = document.querySelectorAll('.nav-link');

// Iterar sobre los enlaces y comparar la URL actual con sus enlaces
navLinks.forEach(link => {
  // Obtener la URL del enlace
  const linkUrl = link.getAttribute('href');
  
  // Comparar la URL actual con la URL del enlace
  if (linkUrl === currentUrl) {
    // Si son iguales, añadir la clase 'active' al enlace
    link.classList.add('active');
  }
});
</script>

<style>
  /* Estilos para el enlace activo */
  .navbar-nav .nav-link.active {
    font-weight: bold; /* Hace que el texto del enlace activo sea más grueso */
    color: #007bff; /* Cambia el color del texto del enlace activo */
  }
  
  </style>