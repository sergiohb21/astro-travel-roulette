---
const {content, subcontent, btnText, btnLink, features} = Astro.props;
export interface Props {
  content: string;
  subcontent: string;
  btnText: string;
  btnLink: string;
  features: {icon: string; title: string; content: string}[];
}
---

<div class="b-example-divider"></div>

<div class="container px-4 py-5">
  <div class="row row-cols-1 row-cols-md-2 align-items-md-center g-5 py-5">
    <div class="col d-flex flex-column align-items-start gap-2">
      <h2 class="fw-bold text-body-emphasis">{content}</h2>
      <p class="text-body-secondary">{subcontent}</p>
      <a href={btnLink} class="btn btn-primary btn-lg">{btnText}</a>
    </div>
    <div class="col">
      <div class="row row-cols-1 row-cols-sm-2 g-4">
        <!-- Loop over features -->
        {features.map((feature) => (
            <div class="col d-flex flex-column gap-2">
              <div class="feature-icon-small d-inline-flex align-items-center justify-content-center text-bg-primary bg-gradient fs-4 rounded-3">
                  <i class={feature.icon}></i>
              </div>
              <h4 class="fw-semibold mb-0 text-body-emphasis">{feature.title}</h4>
              <p class="text-body-secondary">{feature.content}</p>
            </div>
        ))}
      </div>
    </div>
  </div>
</div>
