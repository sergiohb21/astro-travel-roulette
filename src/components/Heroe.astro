---
const {img, alt, title, text, btnPrimaryText, btnPrimaryLink} = Astro.props;
export interface Props {
  img: string;
  alt: string;
  title: string;
  text: string;
  btnPrimaryText: string;
  btnPrimaryLink: string;
}

---
<div class="container col-xxl-8 px-4 py-5">
  <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
    <div class="col-10 col-sm-8 col-lg-6">
      <img src={img} class="d-block mx-lg-auto img-fluid" alt={alt} title={alt} width="700" height="500" loading="lazy">
    </div>
    <div class="col-lg-6">
      <h1 class="display-5 fw-bold text-body-emphasis lh-1 mb-3">{title}</h1>
      <p class="lead">{text}</p>
      <div class="d-grid gap-2 d-md-flex justify-content-md-start">
          <a href={btnPrimaryLink} class="btn btn-primary btn-lg px-4 me-md-2">{btnPrimaryText}</a>
      </div>
    </div>
  </div>
</div>
