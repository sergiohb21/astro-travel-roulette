---
const socialIcons = [
  { icon: "bi-facebook", link: "#" },
  { icon: "bi-twitter", link: "#" },
  { icon: "bi-instagram", link: "#" },
];
---

<footer class="w-100 fixed-bottom d-flex align-items-center justify-content-center flex-wrap bg-light">
  <p class="fs-5 px-3 pt-3">Travel Roulette. &copy; Todos Los Derechos Reservados 2024</p>
  
  <div id="iconos">
    {socialIcons.map((socialIcon) => (
      <a href={socialIcon.link} class="text-dark me-3">
        <i class={`bi ${socialIcon.icon}`}></i>
      </a>
    ))}
  </div>
</footer>
